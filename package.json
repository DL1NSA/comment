{
    "name": "comment5",
    "displayName": "Comment 5 for Visual Studio Code",
    "description": "Enjoy Section Comments of KFCS that you used to generate with Comment IV inside your Visual Studio Code with just a âŒ˜5.",
    "version": "2.0.0",
    "publisher": "karyfoundation",
    "icon": "icon.png",
    "engines": {
        "vscode": "^0.10.1"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./comment",
    "contributes": {
        "keybindings": [
            {
                "command": "comment5.makeLineSectionComment",
                "key": "ctrl+y",
                "mac": "cmd+y",
                "when": "editorTextFocus"
            },
            {
                "command": "comment5.makeLineSectionComment",
                "key": "alt+y",
                "mac": "alt+y",
                "when": "editorTextFocus"
            },
            {
                "command": "comment5.makeLineLineComment",
                "key": "alt+l",
                "mac": "alt+l",
                "when": "editorTextFocus"
            },
            {
                "command": "comment5.makeLineLineComment",
                "key": "ctrl+l",
                "mac": "cmd+l",
                "when": "editorTextFocus"
            }
        ]
    },
    "devDependencies": {
        "vscode": "0.10.x"
    }
}